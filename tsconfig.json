{
	"compilerOptions": {
		"target": "ES2018",
		"module": "CommonJS",
		"inlineSourceMap": true,
		"lib": ["ES2018", "DOM"],
		"outDir": "dist",
		"moduleResolution": "Node",
		"rootDir": "src",
		"strict": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"removeComments": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
